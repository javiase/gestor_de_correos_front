{
  "hosting": [
    {
      "target": "prod",
      "public": "site",
      "headers": [
        {
          "source": "**",
          "headers": [
            { "key": "X-Content-Type-Options", "value": "nosniff" },
            { "key": "X-Frame-Options", "value": "DENY" },
            { "key": "Content-Security-Policy", "value": "frame-ancestors 'none'" },
            { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
          ]
        },
        {
        "source": "/vendor/**",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
        }
      ],
      "redirects": [
        { "source": "/**", "destination": "https://www.respondize.com/:splat", "type": 301 }
      ],
      "rewrites": [
        { "source": "/api/**", "run": { "serviceId": "api-backend", "region": "europe-west1" } }
      ]
    },
    {
      "target": "pre",
      "public": "site",
      "headers": [
        {
          "source": "**",
          "headers": [
            { "key": "X-Content-Type-Options", "value": "nosniff" },
            { "key": "X-Frame-Options", "value": "DENY" },
            { "key": "Content-Security-Policy", "value": "frame-ancestors 'none'" },
            { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
          ]
        }
      ],
      "ignore": [
        "firebase.json",
        ".firebaserc",
        "**/.*",
        "**/node_modules/**",
        ".github/**",
        "README.md",
        "firebase-debug.log"
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "run": {
            "serviceId": "pre-api-backend",
            "region": "europe-west1"
          }
        }
      ]
    }
  ]
}